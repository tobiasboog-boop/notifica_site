<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <!-- Company Info -->
      <div class="footer-col">
        <a href="/" class="footer-logo">
          <img src="/assets/images/notifica-logo-white.svg" alt="{{ site.name }}" width="120" height="32">
        </a>
        <p class="footer-tagline">{{ site.tagline }}</p>
      </div>

      <!-- Contact -->
      <div class="footer-col">
        <h4>Contact</h4>
        <address>
          {{ site.address.street }}<br>
          {{ site.address.postal }} {{ site.address.city }}
        </address>
        <p>
          <a href="tel:{{ site.phone | replace(' ', '') | replace('(', '') | replace(')', '') }}">{{ site.phone }}</a><br>
          <a href="mailto:{{ site.email }}">{{ site.email }}</a>
        </p>
      </div>

      <!-- Quick Links -->
      <div class="footer-col">
        <h4>Navigatie</h4>
        <ul class="footer-links">
          {% for item in navigation.main %}
          <li><a href="{{ item.url }}">{{ item.label }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- CTA -->
      <div class="footer-col">
        <h4>Direct aan de slag?</h4>
        <p>Plan een vrijblijvende demo en ontdek wat Notifica voor jouw bedrijf kan betekenen.</p>
        <button class="btn btn-primary" data-pipedrive-form="demo">
          Plan een demo
        </button>
      </div>
    </div>

    <div class="footer-bottom">
      <div class="footer-legal">
        <p>&copy; {% year %} {{ site.name }}. Alle rechten voorbehouden.</p>
        <p>KVK: {{ site.kvk }} | BTW: {{ site.btw }}</p>
      </div>
      <ul class="footer-legal-links">
        {% for item in navigation.footer %}
        <li><a href="{{ item.url }}">{{ item.label }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
</footer>
