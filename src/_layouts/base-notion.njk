<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or "Notifica | Power BI Dashboards voor Installatiebedrijven" }}</title>
  <meta name="description" content="{{ description or "Professionele Power BI dashboards voor installatiebedrijven. Direct inzicht in projectresultaten, marges en efficiency. Live binnen 1 dag." }}">

  <!-- Google Analytics loaded via cookie consent -->

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Styles -->
  <link rel="stylesheet" href="{{ '/assets/css/notifica-notion.css' | url }}">

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="{{ '/assets/images/favicon.ico' | url }}">
  <link rel="apple-touch-icon" sizes="180x180" href="{{ '/assets/images/Notifica_Favicon.png' | url }}">

  <!-- Canonical URL -->
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">

  <!-- Open Graph -->
  <meta property="og:title" content="{{ title or 'Notifica | Power BI Dashboards voor Installatiebedrijven' }}">
  <meta property="og:description" content="{{ description or site.description }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:site_name" content="Notifica">
  <meta property="og:locale" content="nl_NL">
  {% if og_image %}
  <meta property="og:image" content="{{ site.url }}{{ og_image }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:image:alt" content="Notifica Power BI Dashboards voor Installatiebedrijven">
  {% endif %}

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title or 'Notifica | Power BI Dashboards voor Installatiebedrijven' }}">
  <meta name="twitter:description" content="{{ description or site.description }}">
  {% if og_image %}
  <meta name="twitter:image" content="{{ site.url }}{{ og_image }}">
  <meta name="twitter:image:alt" content="Notifica Power BI Dashboards voor Installatiebedrijven">
  {% endif %}

  <!-- Schema.org JSON-LD for SEO -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Notifica",
    "description": "Power BI dashboards voor installatiebedrijven met directe Syntess koppeling",
    "url": "https://www.notifica.nl",
    "logo": "https://www.notifica.nl/assets/images/notifica-logo-kleur.svg",
    "sameAs": [
      "https://www.linkedin.com/company/notifica"
    ],
    "contactPoint": {
      "@type": "ContactPoint",
      "contactType": "Customer Service",
      "availableLanguage": "Dutch"
    }
  }
  </script>

  {% block head %}{% endblock %}
</head>
<body class="{{ bodyClass or '' }}">
  {% include "header-notion.njk" %}

  <main>
    {% block content %}
      {{ content | safe }}
    {% endblock %}
  </main>

  {% include "footer-notion.njk" %}

  {% if showContactPopup %}
  {% include "contact-popup.njk" %}
  {% endif %}

  <!-- Pipedrive Popup Script -->
  <script src="{{ '/assets/js/pipedrive-popup.js' | url }}"></script>

  <!-- Cookie Consent -->
  <script src="{{ '/assets/js/cookie-consent.js' | url }}"></script>

  <!-- Social Sharing Script -->
  <script>
    // Simple social sharing functionality
    function shareOnLinkedIn() {
      const url = encodeURIComponent(window.location.href);
      window.open('https://www.linkedin.com/sharing/share-offsite/?url=' + url, '_blank');
    }
    function shareOnTwitter() {
      const url = encodeURIComponent(window.location.href);
      const text = encodeURIComponent(document.title);
      window.open('https://twitter.com/intent/tweet?url=' + url + '&text=' + text, '_blank');
    }
  </script>

  {% block scripts %}{% endblock %}
</body>
</html>
