<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} | {{ site.name }}</title>
  <meta name="description" content="{{ description or site.description }}">

  <!-- Google Analytics loaded via cookie consent -->

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

  <!-- Styles -->
  <link rel="stylesheet" href="{{ '/assets/css/main.css' | url }}">

  <!-- Favicon -->
  <link rel="icon" type="image/png" sizes="32x32" href="{{ '/assets/images/favicon-32x32.png' | url }}">
  <link rel="icon" type="image/x-icon" href="{{ '/assets/images/favicon.ico' | url }}">

  <!-- Canonical URL -->
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">

  <!-- Open Graph -->
  <meta property="og:title" content="{{ title }} | {{ site.name }}">
  <meta property="og:description" content="{{ description or site.description }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  {% if og_image %}
  <meta property="og:image" content="{{ site.url }}{{ og_image }}">
  {% endif %}

  {% block head %}{% endblock %}
</head>
<body class="{{ bodyClass or '' }}">
  {% include "header.njk" %}

  <main>
    {% block content %}
      {{ content | safe }}
    {% endblock %}
  </main>

  {% include "footer.njk" %}

  <!-- Scripts -->
  <script src="{{ '/assets/js/mobile-nav.js' | url }}"></script>
  <script src="{{ '/assets/js/pipedrive-popup.js' | url }}"></script>

  <!-- Cookie Consent -->
  <script src="{{ '/assets/js/cookie-consent.js' | url }}"></script>

  {% block scripts %}{% endblock %}
</body>
</html>
