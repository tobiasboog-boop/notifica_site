---
layout: base-notion.njk
---

{% block content %}
<article class="blog-content">
  <div class="container" style="max-width: 800px; padding: 100px 40px 40px;">
    <!-- Terug naar overzicht -->
    <a href="{{ '/inspiratie/blogs/' | url }}" class="back-to-blogs" style="display: inline-flex; align-items: center; gap: 8px; color: var(--text-secondary); text-decoration: none; font-size: 14px; margin-bottom: 32px;">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      Terug naar alle blogs
    </a>

    {{ content | safe }}
  </div>

  <!-- CTA Sectie -->
  <div class="blog-cta-section" style="background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%); padding: 60px 40px; margin-top: 40px;">
    <div class="container" style="max-width: 800px;">
      <div style="text-align: center;">
        <h2 style="font-size: 28px; font-weight: 700; color: var(--primary-color); margin-bottom: 16px;">
          {% if ctaTitle %}{{ ctaTitle }}{% else %}Klaar om datagedreven te werken?{% endif %}
        </h2>
        <p style="font-size: 16px; color: var(--text-secondary); margin-bottom: 24px; max-width: 600px; margin-left: auto; margin-right: auto;">
          {% if ctaText %}{{ ctaText }}{% else %}Ontdek hoe Notifica's Power BI dashboards jouw installatiebedrijf kunnen transformeren. Binnen 1 dag live met realtime inzicht in je belangrijkste KPI's.{% endif %}
        </p>
        <div style="display: flex; gap: 16px; justify-content: center; flex-wrap: wrap;">
          <a href="{{ '/proefperiode/' | url }}" style="background: var(--primary-color); color: white; padding: 14px 28px; border-radius: 8px; text-decoration: none; font-weight: 600; font-size: 15px;">
            Start gratis proefperiode
          </a>
          <a href="{{ '/klanten-ervaringen/' | url }}" style="background: white; color: var(--primary-color); padding: 14px 28px; border-radius: 8px; text-decoration: none; font-weight: 600; font-size: 15px; border: 2px solid var(--primary-color);">
            Bekijk klantervaring
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Gerelateerde Artikelen -->
  {% if relatedBlogs %}
  <div class="related-blogs-section" style="background: #fff; padding: 60px 40px;">
    <div class="container" style="max-width: 1000px;">
      <h2 style="font-size: 24px; font-weight: 700; color: var(--primary-color); margin-bottom: 32px; text-align: center;">
        Wellicht ook interessant
      </h2>
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 24px;">
        {% for blog in relatedBlogs %}
        <a href="{{ blog.url | url }}" style="text-decoration: none; display: block; background: #f8f9ff; border-radius: 12px; padding: 24px; transition: transform 0.2s, box-shadow 0.2s;">
          <h3 style="font-size: 17px; font-weight: 600; color: var(--primary-color); margin-bottom: 8px; line-height: 1.4;">
            {{ blog.title }}
          </h3>
          <p style="font-size: 14px; color: var(--text-secondary); line-height: 1.5; margin: 0;">
            {{ blog.description | truncate(120) }}
          </p>
        </a>
        {% endfor %}
      </div>
    </div>
  </div>
  {% endif %}

  <!-- Terug naar overzicht (onderaan) -->
  <div style="text-align: center; padding: 40px;">
    <a href="{{ '/inspiratie/blogs/' | url }}" style="display: inline-flex; align-items: center; gap: 8px; color: var(--primary-color); text-decoration: none; font-weight: 500; font-size: 15px;">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      Bekijk alle blogs
    </a>
  </div>
</article>
{% endblock %}
