// Open FAQ popup
function openFaqPopup(category) {
    const data = faqData[category];
    if (!data) return;

    let html = `<h2 style="margin-bottom: 24px;">${data.title}</h2>`;

    data.questions.forEach((item, index) => {
        html += `
            <details class="faq-accordion" style="margin-bottom: 12px; border: 1px solid var(--border); border-radius: 8px; padding: 20px; background: white;">
                <summary style="font-weight: 600; font-size: 16px; cursor: pointer; list-style: none; display: flex; justify-content: space-between; align-items: center;">
                    <span>${item.q}</span>
                    <span class="faq-toggle" style="color: var(--blue); font-size: 20px;">+</span>
                </summary>
                <div style="color: var(--text-secondary); margin-top: 16px; padding-top: 16px; border-top: 1px solid var(--border); line-height: 1.6;">
                    ${item.a}
                </div>
            </details>
        `;
    });

    document.getElementById('faqContent').innerHTML = html;
    document.getElementById('faqPopup').classList.add('active');
    document.body.style.overflow = 'hidden';

    // Update toggle icons
    document.querySelectorAll('.faq-accordion').forEach(accordion => {
        accordion.addEventListener('toggle', function() {
            const toggle = this.querySelector('.faq-toggle');
            toggle.textContent = this.open ? '−' : '+';
        });
    });
}

// Close FAQ popup
function closeFaqPopup() {
    document.getElementById('faqPopup').classList.remove('active');
    document.body.style.overflow = '';
}

// Initialize FAQ tiles
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.faq-tile').forEach(tile => {
        tile.addEventListener('click', function() {
            const category = this.dataset.faqCategory;
            openFaqPopup(category);
        });
    });

    // Close on outside click
    document.getElementById('faqPopup').addEventListener('click', function(e) {
        if (e.target === this) {
            closeFaqPopup();
        }
    });

    // Close on Escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeFaqPopup();
        }
    });
});
