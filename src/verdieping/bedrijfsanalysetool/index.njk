<script>
function calculateResults() {
    // Get input values
    const employees = parseInt(document.getElementById('employees').value) || 25;
    const projects = parseInt(document.getElementById('projects').value) || 30;
    const reportingHours = parseInt(document.getElementById('reportingHours').value) || 16;
    const hourlyRate = parseInt(document.getElementById('hourlyRate').value) || 50;

    // Calculate savings
    // Assumption: Notifica saves 70-80% of reporting time
    const savingsPercentage = 0.75;
    const timeSaved = Math.round(reportingHours * savingsPercentage);
    const costSavedMonth = timeSaved * hourlyRate;
    const costSavedYear = costSavedMonth * 12;

    // Calculate ROI (assuming ‚Ç¨250/month subscription)
    const monthlySubscription = 250;
    const yearlySubscription = monthlySubscription * 12;
    const roi = Math.round(((costSavedYear - yearlySubscription) / yearlySubscription) * 100);

    // Update results
    document.getElementById('timeSaved').textContent = timeSaved;
    document.getElementById('costSaved').textContent = '‚Ç¨' + costSavedMonth.toLocaleString('nl-NL');
    document.getElementById('yearSaved').textContent = '‚Ç¨' + costSavedYear.toLocaleString('nl-NL');
    document.getElementById('roi').textContent = roi + '%';
    document.getElementById('projectCount').textContent = projects;
    document.getElementById('employeeCount').textContent = employees;

    // Show results section
    const resultsSection = document.getElementById('results');
    resultsSection.style.display = 'block';

    // Scroll to results
    resultsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
}

// Allow Enter key to trigger calculation
document.getElementById('analysisForm').addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
        e.preventDefault();
        calculateResults();
    }
});
</script>
