            dateText: 'vrijdag 30 januari'
        }
    };

    form.addEventListener('submit', async function(e) {
        e.preventDefault();

        const formData = new FormData(form);
        const data = {
            name: formData.get('name'),
            email: formData.get('email'),
            bedrijf: formData.get('bedrijf') || '',
            date: formData.get('date')
        };

        // Validate
        if (!data.name || !data.email || !data.date) {
            alert('Vul alle verplichte velden in.');
            return;
        }

        // Show loading
        submitBtn.disabled = true;
        submitText.style.display = 'none';
        submitLoading.style.display = 'inline';

        try {
            // Submit to API
            const response = await fetch('/api/webinar-register', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            const result = await response.json();

            if (result.success) {
                showSuccess(data.date);
            } else {
                alert(result.error || 'Er ging iets mis. Probeer het opnieuw.');
                submitBtn.disabled = false;
                submitText.style.display = 'inline';
                submitLoading.style.display = 'none';
            }
        } catch (error) {
            console.error('Registration error:', error);
            // Still show success (graceful degradation)
            showSuccess(data.date);
        }
    });

    function showSuccess(selectedDate) {
        const cal = calendarData[selectedDate];
        const teamsLink = teamsLinks[selectedDate];
        const dateISO = selectedDate === 'donderdag-29' ? '2026-01-29' : '2026-01-30';

        // Update success screen
        document.getElementById('selected-date-text').textContent = cal.dateText;
        document.getElementById('teams-link').href = teamsLink;
        document.getElementById('teams-link').textContent = teamsLink;

        // Description for calendar
        const calDescription = `Van analyse naar actie: leer hoe je inzichten uit je bedrijfsdata vertaalt naar concrete sturing.\n\nTeams-link: ${teamsLink}`;

        // Google Calendar link
        const googleUrl = `https://calendar.google.com/calendar/render?action=TEMPLATE&text=${encodeURIComponent(cal.title)}&dates=${cal.date}T${cal.startTime}/${cal.date}T${cal.endTime}&details=${encodeURIComponent(calDescription)}&location=${encodeURIComponent(teamsLink)}`;
        document.getElementById('google-calendar').href = googleUrl;

        // Outlook Web (Office 365) - works for most business users
        const outlookUrl = `https://outlook.office.com/calendar/0/action/compose?subject=${encodeURIComponent(cal.title)}&startdt=${dateISO}T12:00:00&enddt=${dateISO}T12:30:00&body=${encodeURIComponent(calDescription)}&location=${encodeURIComponent(teamsLink)}`;
        document.getElementById('outlook-calendar').href = outlookUrl;

        // Apple Calendar - webcal link to hosted ICS file
        // Since webcal requires a hosted file, we use a workaround via ics file
        const appleUrl = generateAppleCalendarUrl(cal, teamsLink, dateISO);
        document.getElementById('apple-calendar').href = appleUrl;

        // Show success, hide form
        formContainer.style.display = 'none';
        successScreen.style.display = 'block';
    }

    function generateAppleCalendarUrl(cal, teamsLink, dateISO) {
        // Apple Calendar works best with a data: URL that triggers the webcal handler
        // We'll use a Google Calendar fallback since Apple doesn't have a web interface
        // For Apple users on macOS/iOS, the Google link will prompt to add to their calendar
        const dateCompact = dateISO.replace(/-/g, '');
        const calDescription = `Van analyse naar actie: leer hoe je inzichten uit je bedrijfsdata vertaalt naar concrete sturing. Teams-link: ${teamsLink}`;

        // Apple Calendar URL scheme (works on macOS and iOS)
        // Format: webcal:// or data: with text/calendar
        const icsContent = [
            'BEGIN:VCALENDAR',
            'VERSION:2.0',
            'PRODID:-//Notifica//Webinar//NL',
            'BEGIN:VEVENT',
            'DTSTART:' + dateCompact + 'T110000Z',
            'DTEND:' + dateCompact + 'T113000Z',
            'SUMMARY:' + cal.title,
            'DESCRIPTION:' + calDescription.replace(/\n/g, '\\n'),
            'LOCATION:' + teamsLink,
            'END:VEVENT',
            'END:VCALENDAR'
        ].join('\r\n');

        return 'data:text/calendar;charset=utf-8,' + encodeURIComponent(icsContent);
    }
});
