            // Update progress bar
            document.querySelectorAll('.progress-step').forEach(p => {
                const pStep = parseInt(p.dataset.step);
                p.classList.remove('active', 'completed');
                if (pStep < step) p.classList.add('completed');
                if (pStep === step) p.classList.add('active');
