{# Hero Section #}
<section class="hero hero--small">
  <div class="container">
    <div class="hero__content">
      <h1 class="hero__title">Blogs</h1>
      <p class="hero__description">
        Praktische inzichten, tips en trends over data-analyse en dashboards voor installatiebedrijven.
      </p>
    </div>
  </div>
</section>

{# Blog Grid #}
<section class="section">
  <div class="container">
    <div class="blog-grid">
      {% for post in collections.blogs | reverse %}
      <article class="blog-card">
        <a href="{{ post.url }}" class="blog-card__link">
          <div class="blog-card__content">
            <h2 class="blog-card__title">{{ post.data.title }}</h2>
            <p class="blog-card__excerpt">{{ post.data.description }}</p>
            <span class="blog-card__read-more">
              Lees meer
              <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                <path d="M6 3l5 5-5 5V3z"/>
              </svg>
            </span>
          </div>
        </a>
      </article>
      {% endfor %}
    </div>
  </div>
</section>

{# CTA Section #}
<section class="section section--primary">
  <div class="container text-center">
    <h2 class="text-white mb-4">Meer weten?</h2>
    <p class="lead text-white mb-8" style="opacity: 0.9;">
      Neem contact met ons op en ontdek wat Notifica voor jouw bedrijf kan betekenen.
    </p>
    <button class="btn btn-secondary btn-lg" data-pipedrive-form="contact">
      Neem vrijblijvend contact op
    </button>
  </div>
</section>
