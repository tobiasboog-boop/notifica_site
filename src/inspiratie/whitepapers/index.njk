<script>
// Handle whitepaper download buttons - uses Pipedrive popup system
document.addEventListener('DOMContentLoaded', function() {
    const whitepaperDownloadLinks = document.querySelectorAll('.whitepaper-download');
    whitepaperDownloadLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const title = this.getAttribute('data-title');
            // Use the global NotificaPopup.open function with context
            if (window.NotificaPopup) {
                window.NotificaPopup.open('whitepaper', { title: title });
            }
        });
    });
});
</script>
