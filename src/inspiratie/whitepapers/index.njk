                        <line x1="12" y1="20" x2="12" y2="4"/>
                        <line x1="6" y1="20" x2="6" y2="14"/>
                    </svg>
                    {% elif paper.data.type == "Actieplan" %}
                    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
