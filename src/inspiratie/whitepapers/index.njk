{# Whitepapers Grid #}
<section class="section section--gray">
  <div class="container">
    <div class="text-center mb-12">
      <h2>Download onze gidsen</h2>
    </div>
    <div class="whitepaper-grid">
      {% for paper in collections.whitepapers %}
      <article class="whitepaper-card">
        <div class="whitepaper-card__icon">
          {% if paper.data.type == "Leergids" %}
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/>
            <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>
          </svg>
          {% elif paper.data.type == "Whitepaper" %}
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
            <polyline points="14 2 14 8 20 8"/>
            <line x1="16" y1="13" x2="8" y2="13"/>
            <line x1="16" y1="17" x2="8" y2="17"/>
          </svg>
          {% elif paper.data.type == "Benchmark" %}
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="18" y1="20" x2="18" y2="10"/>
            <line x1="12" y1="20" x2="12" y2="4"/>
            <line x1="6" y1="20" x2="6" y2="14"/>
          </svg>
          {% elif paper.data.type == "Actieplan" %}
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 11l3 3L22 4"/>
            <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
          </svg>
          {% else %}
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
            <polyline points="14 2 14 8 20 8"/>
          </svg>
          {% endif %}
        </div>
        <div class="whitepaper-card__content">
          <span class="whitepaper-card__type">{{ paper.data.type }}</span>
          <h2 class="whitepaper-card__title">{{ paper.data.title }}</h2>
          <p class="whitepaper-card__excerpt">{{ paper.data.description }}</p>
          <button class="btn btn-primary" data-pipedrive-form="whitepaper" data-whitepaper="{{ paper.data.title }}">
            Download gratis
          </button>
        </div>
      </article>
      {% endfor %}
    </div>
  </div>
</section>

